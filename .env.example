# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Pinecone Configuration (Required)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=yonearth-episodes

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
ALLOWED_ORIGINS=http://localhost:3000,https://yonearth.org
RATE_LIMIT_PER_MINUTE=10

# Logging
LOG_LEVEL=INFO

# Gaia Character Settings
GAIA_PERSONALITY_VARIANT=warm_mother
GAIA_TEMPERATURE=0.7
GAIA_MAX_TOKENS=1000

# Episode Processing
EPISODES_TO_PROCESS=172
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Development
DEBUG=true

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379